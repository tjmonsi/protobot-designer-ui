{
  "name": "base-js-template",
  "version": "0.0.1",
  "description": "Base template for all JS projects that I do",
  "main": "index.js",
  "scripts": {
    "commit": "npx git-cz",
    "semistandard": "npx semistandard",
    "test": "npx npm-run-all --serial semistandard"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tjmonsi/base-js-template.git"
  },
  "keywords": [
    "base",
    "js",
    "project"
  ],
  "author": "TJ Monserrat",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/tjmonsi/base-js-template/issues"
  },
  "homepage": "https://github.com/tjmonsi/base-js-template#readme",
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.5.0",
    "@babel/plugin-transform-runtime": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "babel-eslint": "^10.0.2",
    "conventional-changelog": "^3.1.8",
    "eslint": "^6.0.1",
    "eslint-config-semistandard": "^13.0.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-mocha": "^5.3.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "husky": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "semistandard": "^13.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "semistandard": {
    "globals": [
      "describe",
      "it",
      "after",
      "before"
    ]
  }
}
